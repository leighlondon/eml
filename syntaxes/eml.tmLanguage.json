{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Email",
  "scopeName": "text.eml",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "entity.name.function.eml",
          "match": "^([\\w-]*)+:"
        },
        {
          "name": "constant.numeric.ipv4",
          "match": "\\s[<\\[\\(]*?((\\d?\\d|1\\d\\d|2[0-4]\\d|25[0-5])\\.){3}(\\d?\\d|1\\d\\d|2[0-4]\\d|25[0-5])[>\\]\\)]*?\\s"
        },
        {
          "name": "variable.name.eml.address",
          "match": "(<?[\\w\\.\\-\\+=]*@[\\w\\.-]*[a-zA-Z]+>?)"
        },
        {
          "name": "variable.name.eml.address",
          "match": "<>"
        },
        {
          "name": "entity.name.class.domain",
          "match": "\\b(\\w[\\w\\.-]*\\.[\\w\\.-]*\\w[a-zA-Z]+)\\b"
        },
        {
          "match": "\\b([A-Za-z]+/[A-Za-z\\-]+)\\b",
          "name": "constant.other.eml.contenttype"
        },
        {
          "match": "(?i)\\b(base64|smtp|utf\\-8)\\b",
          "name": "constant.other.eml.base64"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.email",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.email",
          "match": "\\\\."
        }
      ]
    }
  }
}
