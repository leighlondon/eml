{
  "$schema": "./_schema.json",
  "name": "Email",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.eml",
          "match": ""
        },
        {
          "name": "keyword.other",
          "match": "\\b--"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.email",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.email",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "text.eml"
}
